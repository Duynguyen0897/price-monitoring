{
    "name": "price-monitoring-app",
    "version": "1.0.0",
    "description": "Application for monitoring competitor product prices",
    "main": "backend/server.js",
    "scripts": {
        "start": "node backend/server.js",
        "dev": "nodemon backend/server.js",
        "frontend": "cd frontend && npm start",
        "dev:all": "concurrently \"npm run dev\" \"npm run frontend\"",
        "test": "jest",
        "install:all": "npm install && cd frontend && npm install"
    },
    "dependencies": {
        "@google/generative-ai": "^0.1.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "morgan": "^1.10.0",
        "mysql2": "^3.6.1",
        "node-cron": "^4.0.5",
        "puppeteer": "^21.3.8",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1"
    }
}
